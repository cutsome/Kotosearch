<%= provide(:title, '事業者登録') %>
<% provide(:button_text, '新規登録') %>
<div class="form">
  <div class="form-headline">
    <h1 class="title">体験型事業者 無料会員登録</h1>
    <p class="description">以下の項目を入力して、Kotosearchに登録してください</p>
  </div>
  <div class="form-container">
    <%= form_for(@owner) do |f| %>
      <%= render "shared/error_messages", model: @owner %>
      <div class="form-layout">
        <%= f.label "会社名", class: "form-label" %>
        <%= f.text_field :name, class: "form-block" %>

        <%= f.label "メールアドレス", class: "form-label" %>
        <%= f.text_field :email, class: "form-block" %>

        <%= f.label "業種", class: "form-label" %>
        <%= f.text_field :category, class: "form-block" %>

        <%= f.label "住所", class: "form-label" %>
        <%= f.text_field :address, class: "form-block" %>

        <%= f.label "会社規模", class: "form-label" %>
        <%= f.text_field :scale, class: "form-block" %>

        <%= f.label "パスワード", class: "form-label" %>
        <%= f.password_field :password, class: "form-block" %>

        <%= f.label "パスワード確認", class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-block" %>
      </div>
      <div class="btn-location">
        <%= f.submit "新規登録", class: "button" %>
      </div>
    <% end %>
  </div>
</div>




